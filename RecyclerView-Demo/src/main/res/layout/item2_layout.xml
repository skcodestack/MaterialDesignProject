<?xml version="1.0" encoding="utf-8"?>
<github.com.materialdesignproject.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <github.com.materialdesignproject.view.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/miss_default_error"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:layout_gravity="top"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#0000ff"
        android:background="#cccccccc"/>


</github.com.materialdesignproject.view.SquareFrameLayout>