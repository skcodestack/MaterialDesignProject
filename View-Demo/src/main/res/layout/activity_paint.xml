<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="github.skcodestack.materialdesignproject.paint.PaintActivity">
    <Button
        android:onClick="btn_baseuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基本使用"/>

    <Button
        android:onClick="btn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字绘制"/>

    <Button
        android:onClick="btn_circular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度条"/>
    <Button
        android:onClick="btn_pricebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pricebar"/>

    <Button
        android:onClick="btn_shader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="渲染"/>
    <Button
        android:onClick="btn_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="滤镜处理"/>

    <Button
        android:onClick="btn_colorfilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="颜色的滤镜处理"/>

</LinearLayout>
