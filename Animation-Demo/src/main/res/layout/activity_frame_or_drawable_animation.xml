<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame_or_drawable_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="github.skcodestack.materialdesignproject.FrameOrDrawableAnimationActivity">


    <Button
        android:onClick="btn_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xml_1"/>

    <Button
        android:onClick="btn_xml2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xml_2"/>

    <Button
        android:onClick="btn_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="code"/>


    <ImageView
        android:id="@+id/target"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
</LinearLayout>
