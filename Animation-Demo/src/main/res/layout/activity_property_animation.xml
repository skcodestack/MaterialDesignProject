<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_property_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="github.skcodestack.materialdesignproject.PropertyAnimationActivity">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:onClick="onclick_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xml"/>
            <Button
                android:onClick="onclick_xml2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xml2"/>
            <Button
                android:onClick="onclick_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator"/>
            <Button
                android:onClick="onclick_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ValueAnimator"/>
            <Button
                android:onClick="onclick_propertyvalues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PropertyValues"/>
            <Button
                android:onClick="onclick_keyframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyframe"/>

            <Button
                android:onClick="onclick_custom_typeevaluator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom_TypeEvaluator"/>

            <Button
                android:onClick="onclick_custom_typeevaluator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom_TypeEvaluator2"/>
            <Button
                android:onClick="onclick_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动画集合"/>
        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent">
        <github.skcodestack.materialdesignproject.view.CustomTextView
            android:id="@+id/tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"/>
        <ImageView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/target"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>


    </FrameLayout>
</LinearLayout>
